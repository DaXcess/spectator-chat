{
	"schemaVersion": 1,
	"id": "spectator-chat",
	"version": "${version}",
	"name": "Simple Voice Chat Global Spectator",
	"description": "An addon for Simple Voice Chat that makes all spectators hear each other globally. This mod disables groups.",
	"authors": [
		"DaXcess"
	],
	"contact": {
		"homepage": "https://github.com/DaXcess",
		"sources": "https://github.com/DaXcess/spectator-chat"
	},
	"license": "MIT",
	"icon": "assets/spectator-chat/icon.png",
	"environment": "*",
	"entrypoints": {
		"main": [
			"io.daxcess.spectatorchat.SpectatorChatMod"
		],
		"voicechat": [
			"io.daxcess.spectatorchat.SpectatorChatPlugin"
		]
	},
	"mixins": [],
	"depends": {
		"fabricloader": ">=0.16.10",
		"minecraft": "~1.21.1",
		"java": ">=21",
		"fabric-api": "*",
		"voicechat": ">=${minecraft_version}-${voicechat_api_version}"
	}
}